<script>
    function updatePrice() {
        const cheeseQty = parseInt(document.getElementById("cheese_qty").value) || 0;
        const veggieQty = parseInt(document.getElementById("veggie_qty").value) || 0;
        const chilliQty = parseInt(document.getElementById("chilli_paneer_qty").value) || 0;
        const paneerQty = parseInt(document.getElementById("paneer_masala_qty").value) || 0;

        // Base prices
        let totalPrice = (cheeseQty * 10) + (veggieQty * 14) + (chilliQty * 18) + (paneerQty * 18);

        // Add-ons prices for each pizza
        const veggieAddOns = [
            { id: "veggie_paneer", price: 1 },
            { id: "veggie_pineapple", price: 0.50 },
            { id: "veggie_mushroom", price: 0.50 }
        ];

        const chilliAddOns = [
            { id: "chilli_paneer_pineapple", price: 0.50 },
            { id: "chilli_paneer_mushroom", price: 0.50 },
            { id: "chilli_paneer_black_olives", price: 0.50 }
        ];

        const paneerAddOns = [
            { id: "paneer_masala_pineapple", price: 0.50 },
            { id: "paneer_masala_mushroom", price: 0.50 },
            { id: "paneer_masala_black_olives", price: 0.50 }
        ];

        let addOnDescriptions = {
            veggie: [],
            chilli: [],
            paneer: []
        };

        // Add-ons will only be added to the total if the quantity of the pizza is >= 1
        if (veggieQty > 0) {
            veggieAddOns.forEach(addOn => {
                const checkbox = document.getElementById(addOn.id);
                if (checkbox.checked) {
                    totalPrice += (addOn.price * veggieQty); // Multiply add-on price by veggie quantity
                    // Strip numbers and symbols from the add-on text
                    addOnDescriptions.veggie.push(checkbox.nextSibling.textContent.replace(/[^a-zA-Z ]/g, '').trim());
                }
            });
            // If no add-ons are selected, mark as NIL
            if (addOnDescriptions.veggie.length === 0) {
                addOnDescriptions.veggie.push("NIL");
            }
        }

        if (chilliQty > 0) {
            chilliAddOns.forEach(addOn => {
                const checkbox = document.getElementById(addOn.id);
                if (checkbox.checked) {
                    totalPrice += (addOn.price * chilliQty); // Multiply add-on price by chilli quantity
                    // Strip numbers and symbols from the add-on text
                    addOnDescriptions.chilli.push(checkbox.nextSibling.textContent.replace(/[^a-zA-Z ]/g, '').trim());
                }
            });
            // If no add-ons are selected, mark as NIL
            if (addOnDescriptions.chilli.length === 0) {
                addOnDescriptions.chilli.push("NIL");
            }
        }

        if (paneerQty > 0) {
            paneerAddOns.forEach(addOn => {
                const checkbox = document.getElementById(addOn.id);
                if (checkbox.checked) {
                    totalPrice += (addOn.price * paneerQty); // Multiply add-on price by paneer quantity
                    // Strip numbers and symbols from the add-on text
                    addOnDescriptions.paneer.push(checkbox.nextSibling.textContent.replace(/[^a-zA-Z ]/g, '').trim());
                }
            });
            // If no add-ons are selected, mark as NIL
            if (addOnDescriptions.paneer.length === 0) {
                addOnDescriptions.paneer.push("NIL");
            }
        }

        // Update total price
        document.getElementById("total-price").textContent = totalPrice.toFixed(2);
    }

    document.querySelectorAll('.quantity').forEach(input => {
        input.addEventListener('input', updatePrice);
    });

    document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
        checkbox.addEventListener('change', updatePrice);
    });

    updatePrice();
</script>



